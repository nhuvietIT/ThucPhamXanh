<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/colordangnhap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_quangcao"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tx_tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Các thương hiệu sản phẩm Thực Phẩm Xanh"
        android:textColor="@color/colorviendangnhap"
        android:textStyle="bold"
        android:textSize="15dp"

        android:layout_margin="5dp"/>
    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycler_loaiTH"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/txt_tenloaisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Các loại Thực Phẩm Mới"
        android:textColor="@color/colorviendangnhap"
        android:textSize="15dp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:layout_gravity="center"
        android:id="@+id/recycler_cacloaiTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>