<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colordangnhap"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toobar_tk"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/tk_toobar"
            app:titleTextColor="@color/colorwhile">

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:background="@color/colordangnhap"
            android:padding="9dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp">

                <android.support.v7.widget.SearchView
                    android:id="@+id/simpleSearchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgrundToobar"
                    android:iconifiedByDefault="true"
                    app:icon="@drawable/ic_search_black_24dp"
                    app:queryHint="Tìm Kiếm Thực Phẩm Xanh"
                    app:showAsAction="collapseActionView|ifRoom" />
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_tk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardCornerRadius="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Rc_tk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colordangnhap"
            android:padding="9dp">

        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.CardView>


</LinearLayout>