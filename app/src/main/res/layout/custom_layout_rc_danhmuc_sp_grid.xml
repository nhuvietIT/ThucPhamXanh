<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:aap="http://schemas.android.com/tools"
    android:background="@color/colordangnhap"
    android:orientation="vertical"
    android:padding="9dp"
    android:id="@+id/lick_linnerlayoutDM"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewDM"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:backgroundTint="@color/colordangnhap"
        app:cardCornerRadius="5dp"
        android:layout_weight="6.32">


        <ProgressBar
            android:id="@+id/pro_loadsDM"
            android:layout_width="85dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp" />


        <TextView
            android:id="@+id/tx_RC_tẹnSPDM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="165dp"
            android:text="Loại SP"
            android:textColor="@color/colorviendangnhap"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_Rc_loaiSPDM"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bgsearch1" />


    </android.support.v7.widget.CardView>

</LinearLayout>