<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrundToobar"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="555dp"
        android:text="Thực Phẩm Xanh Sạch"
        android:textColor="@color/colorwhile"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="14dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textAllCaps="false"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Thanh Toán"
            app:titleTextColor="@color/colorwhile" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgrundToobar"
            android:padding="5dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colordangnhap"
                android:orientation="vertical"
                android:padding="26dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gởi tới"
                    android:textColor="@color/backgrundToobar"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ed_input_hotenkt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:hintTextAppearance="@style/EditTextHint">

                    <EditText
                        android:id="@+id/rd_th_tennguoinhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tên Người Nhận"
                        android:textColor="@color/colorden"
                        android:textColorHint="@color/colorden"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:hintTextAppearance="@style/EditTextHint">

                    <EditText
                        android:id="@+id/ed_diachigiao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Địa Chỉ Giao Hàng"
                        android:textColor="@color/colorden"
                        android:textColorHint="@color/colorden"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:hintTextAppearance="@style/EditTextHint">

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:hint="Số Điện thoại Liên Lạc"
                        android:inputType="number"
                        android:textColor="@color/colorden"
                        android:textColorHint="@color/colorden"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tùy Chọn Giao Hàng"
                    android:textColor="@color/backgrundToobar"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/colordangnhap"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/im_nhantiengiaohang"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@color/colordangnhap"
                            android:scaleType="centerInside"
                            android:src="@drawable/ship" />

                        <TextView
                            android:id="@+id/txgiaohang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="Nhận tiền khi giao hàng" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="18dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/im_nhantien_Chuyenkhoan"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@color/colordangnhap"
                            android:scaleType="centerInside"
                            android:src="@drawable/visa" />

                        <TextView
                            android:id="@+id/txchueynkhoan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuyển khoản"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </LinearLayout>

                <CheckBox
                    android:id="@+id/thoathuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:buttonTint="@color/backgrundToobar"
                    android:checked="false"
                    android:text="@string/camket"
                    android:textColorHint="@color/backgrundToobar"
                    android:textSize="13sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/Thanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/backgrundToobar"
                    android:text="Thanh Toán"
                    android:textColor="@color/colorwhile" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="228dp"
                android:text="Kính Chúc Quý Khách Mạnh Khỏe.!"
                android:textColor="@color/backgrundToobar"
                android:textSize="18sp"
                android:textStyle="italic" />
        </android.support.v7.widget.CardView>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>

