<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lick_linnerlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colordangnhap"
    android:orientation="vertical"
    android:padding="9dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_GH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:backgroundTint="@color/colordangnhap"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/im_Rc_loai_GH"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:background="@color/colordangnhap"
                android:src="@drawable/manhinhcho" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tx_RC_tẹnSP_GH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="Loại SP" />

            <TextView
                android:id="@+id/tx_giaSP_GH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="25dp"
                android:text="Giá SP"
                android:textColor="@color/colorred" />


            <TextView
                android:id="@+id/tx_giamgiaSP_GH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Giảm giá"
                android:visibility="gone" />

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginLeft="22dp">

                 <ImageButton
                     android:id="@+id/giam_gh"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@color/colordangnhap"
                     android:src="@drawable/ic_remove_black_24dp"
                     android:padding="5dp"/>
                 <View
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:background="@color/colorden"
                     android:layout_margin="5dp"/>
                 <TextView
                     android:id="@+id/tx_soluong"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textSize="18sp"
                     android:layout_margin="5dp"
                     />
                 <View
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:background="@color/colorden"
                     android:layout_margin="5dp"/>

                 <ImageButton
                     android:id="@+id/tang_gh"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="5dp"
                     android:background="@color/colordangnhap"
                     android:src="@drawable/ic_add_black_24dp"/>
             </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/im_xoa_GH"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-85dp"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>