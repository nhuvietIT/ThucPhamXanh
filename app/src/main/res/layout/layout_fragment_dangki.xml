<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colordangnhap">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_dkdienthongtin"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ed_input_hotenkt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintTextAppearance="@style/EditTextHint">

            <EditText
                android:id="@+id/ed_hotenkt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và Tên"
                android:textColor="@color/colorden"
                android:textColorHint="@color/colorden"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ed_input_emailkt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintTextAppearance="@style/EditTextHint">

            <EditText
                android:id="@+id/ed_emailkt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa Chỉ Email"
                android:textColor="@color/colorden"
                android:textColorHint="@color/colorden"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ed_input_passkt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintTextAppearance="@style/EditTextHint">

            <com.example.nhuviet.thucphamxanh.CustomView.PassWork_EditText
                android:id="@+id/ed_passkt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:textColor="@color/colorden"
                android:textColorHint="@color/colorden"
                app:useeyeTrike="true"
                app:usevalidata="true"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chuhoathuong"
            android:textSize="11dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/ed_input_passnhaplaikt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintTextAppearance="@style/EditTextHint">

            <com.example.nhuviet.thucphamxanh.CustomView.PassWork_EditText
                android:id="@+id/ed_passnhaplaikt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                app:useeyeTrike="true"
                app:usevalidata="true"
                android:textColor="@color/colorden"
                android:textColorHint="@color/colorden"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/s_madocquyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="13dp"
            android:text="@string/swith_kienmai"
            android:checked="false" />
        <Button
            android:id="@+id/bt_dangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/backgrundToobar"
            android:text="Đăng Ký"
            android:textColor="@color/colorwhile" />
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dieukhoan"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/bt_facebookdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/vien_facebook"
                android:drawableLeft="@drawable/facebookiconsmall"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textColor="@color/colorfacebook" />

            <Button
                android:id="@+id/bt_googledk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/vien_google"
                android:drawableLeft="@drawable/googleplussmall"
                android:text="Google"
                android:textAllCaps="false"
                android:textColor="@color/colorgoogle" />
        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
